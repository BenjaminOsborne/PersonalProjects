@rendermode InteractiveServer

<MudContainer>
    <MudGrid Class="align-center">
        <MudItem>
            <MudSelect T=AccountTypeData
                       @bind-Value=@SelectedAccountType
                       Variant=Variant.Outlined
                       Margin=Margin.Normal
                       Dense=true
                       Typo=Typo.body2>
                @foreach (var at in SelectableAccountTypes)
                {
                    <MudSelectItem Value=@at/>
                }
            </MudSelect>

        </MudItem>
        <MudItem>
            <MudFileUpload T="IBrowserFile"
                           FilesChanged=@ProcessAccountFile
                           Accept=@SelectedAccountType.FileAccept
                           MaximumFileCount="1"
                           Disabled=@(!IsAccountTypeSelected)>
                <ActivatorContent>
                    <MudButton Variant="Variant.Filled"
                               Color=Color.Primary
                               StartIcon=@Icons.Material.Filled.FileOpen
                               Size=@Size.Medium>
                    </MudButton>
                </ActivatorContent>
            </MudFileUpload>
        </MudItem>
    </MudGrid>
    <MudText Typo="Typo.body2">
        <i>@SelectedAccountType.Description</i>
    </MudText>
</MudContainer>
