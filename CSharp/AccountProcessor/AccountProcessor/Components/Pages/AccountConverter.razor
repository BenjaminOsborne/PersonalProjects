@rendermode InteractiveServer

<select style="margin-right: 5px" value=@SelectedAccountType.Id @onchange="e => SetAccountType((string?)e.Value)">
    @foreach (var at in SelectableAccountTypes)
    {
        <option value="@at.Id">@at.Name</option>
    }
</select>

@if(SelectedAccountType.Type != AccountType.InitialSelect)
{
    <button class="btn btn-primary">
        <InputFile OnChange="@ProcessAccountFile" accept=@SelectedAccountType.FileAccept />
    </button>
}
else
{
    <button class="btn btn-primary" disabled>
        <InputFile/>
    </button>
}

<br />
<i>@SelectedAccountType.Description</i>